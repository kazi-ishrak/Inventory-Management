@{
    ViewData["Title"] = "Products";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/datatables/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    <link href="~/css/productList.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid p-3">
        <h2 class="text-primary">Products</h2>
        <hr>
        <div class="mt-4">
            <button id="openModalButton" class="btn btn-success">Create Product</button>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary bg-gradient">
                        <h5 class="text-white">Product List</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="DataTable_Products" class="display table-bordered text-center" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>SKU</th>
                                        <th>Stock</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Created at</th>
                                        <th>Updated at</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data will be dynamically populated here -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Adding Product -->
    <div class="modal fade" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Add Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="productName">Product Name:</label>
                        <input type="text" id="productName" class="form-control" placeholder="Product Name" required />
                    </div>
                    <div class="form-group">
                        <label for="sku">SKU:</label>
                        <input type="text" id="sku" class="form-control" placeholder="SKU" required />
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock:</label>
                        <input type="number" id="stock" class="form-control" placeholder="Stock" required />
                    </div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input type="number" id="price" class="form-control" placeholder="Price" step="0.01" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="submitProductButton" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Updating Product -->
    <div class="modal fade" id="rowEditModal" tabindex="-1" aria-labelledby="updateProductModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateProductModalLabel">Update Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="productIdHidden" />
                    <input type="hidden" id="created_atHidden" />  <!-- Hidden field for created_at -->
                    <input type="hidden" id="updated_atHidden" />  <!-- Hidden field for updated_at -->

                    <div class="form-group">
                        <label for="productNameUpdate">Product Name:</label>
                        <input type="text" id="productNameUpdate" class="form-control" placeholder="Product Name" required />
                    </div>
                    <div class="form-group">
                        <label for="skuUpdate">SKU:</label>
                        <input type="text" id="skuUpdate" class="form-control" placeholder="SKU" required />
                    </div>
                    <div class="form-group">
                        <label for="stockUpdate">Stock:</label>
                        <input type="number" id="stockUpdate" class="form-control" placeholder="Stock" required />
                    </div>
                    <div class="form-group">
                        <label for="priceUpdate">Price:</label>
                        <input type="number" id="priceUpdate" class="form-control" placeholder="Price" step="0.01" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="updateProductButton" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script src="~/lib/datatables/datatables.bootstrap5.min.js"></script>
    <script src="~/js/productList.js"></script>
</body>
</html>
